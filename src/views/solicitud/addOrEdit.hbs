<h3>{{viewTitle}}</h3>

<form action="/solicitud" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{solicitud._id}}">
    <div class="form-group">
        <label>Nombre completo</label>
        <input type="text" class="form-control" name="NombreCompleto" placeholder="Ingrese el nombre del cliente" value="{{solicitud.NombreCompleto}}">
        <div class="text-danger">
            {{solicitud.NombreCompletoError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Ingrese el email del cliente" value="{{solicitud.email}}">
        <div class="text-danger">
            {{solicitud.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Problema reportado</label>
                <input type="text" disabled="disabled" class="form-control" name="" value="{{solicitud.Problema}}">
                <select name="Problema" class="form-control" name="Problema" value="{{solicitud.Problema}}">>
                   <option selected value="No selecciono datos"> Elige una opci칩n </option>
                    <optgroup label="Respuestas informativas"> 
                        <option value="HTTP Request Serie 100">HTTP Request Serie 100</option> 
                    </optgroup> 
                    <optgroup label="Respuestas satisfactorias"> 
                        <option value="HTTP Request Serie 200">HTTP Request Serie 200</option> 
                    </optgroup> 
                    <optgroup label="Respuestas de redirecciones"> 
                        <option value="HTTP Request Serie 300">HTTP Request Serie 300</option> 
                    </optgroup> 
                    <optgroup label="Errores de cliente"> 
                        <option value="HTTP Request Serie 400">HTTP Request Serie 400</option> 
                    </optgroup> 
                    <optgroup label="Errores de servidor"> 
                        <option value="HTTP Request Serie 500">HTTP Request Serie 500</option> 
                    </optgroup> 
                    <optgroup label="Fallos de seguridad"> 
                        <option value="Brute Force">Brute Force</option>
                        <option value="CGI Attack">CGI Attack</option> 
                        <option value="Cross Site Scripting">Cross Site Scripting</option> 
                        <option value="DDoS">DDoS</option> 
                        <option value="SQL Injecction">SQL Injecction</option> 
                        <option value="Unicode Hack">Unicode Hack</option> 
                    </optgroup> 
                </select>
        </div>
        <div class="form-group col-md-6">
            <label>Estatus de la solicitud</label>
                <input type="text" disabled="disabled" class="form-control" name="" value="{{solicitud.Estatus}}">
                <select name="Estatus" class="form-control" name="Estatus" placeholder="Estatus" value="{{solicitud.Estatus}}">>
                <option selected value="No selecciono datos"> Elige una opci칩n </option>
                    <optgroup label="Estatus de solicitud"> 
                    <option value="Solicitud nueva">Solicitud nueva</option>
                    <option value="Solicitud asignada">Solicitud asignada</option> 
                    <option value="Solicitud pendiente">Solicitud pendiente</option> 
                    <option value="Solicitud en espera">Solicitud en espera</option>
                    <option value="Solicitud resuelta">Solicitud resuelta</option> 
                    <option value="Solicitud cerrada">Solicitud cerrada</option> 
                </optgroup> 
                </select>
        </div>
        <div class="form-group col-md-6">
            <label>M치s informaci칩n y/o detalles del problema</label>
            <input type="text" style="width:820px; heigth: 300px" class="form-control" placeholder="Describa el problema presentado" name="Info" value="{{solicitud.Info}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success"><i class="fa fa-database"></i> Enviar</button>
        <a class="btn btn-primary" href="/solicitud/list"><i class="fa fa-list-alt"></i> Ver todo</a>
    </div>
</form>